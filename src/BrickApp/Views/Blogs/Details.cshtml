@model BrickApp.ViewModels.Blogs.DetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Blog Posts for @Model.Category</h2>

<div>    
    <h4>Number of Posts: @Model.Posts.Count()</h4>
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Date Created
            </th>
            <th></th>
        </tr>
        @foreach (var post in Model.Posts)
        {
            <tr>
                <td>
                    @post.Title
                </td>
                <td>
                    @post.DateCreated
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Posts" asp-route-id="@post.BlogId">Edit</a> |
                    <a asp-action="Delete" asp-controller="Posts" asp-route-id="@post.BlogId">Delete</a>
                </td>
            </tr>
        }
        </table>
</div>
